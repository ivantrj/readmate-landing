---
import "../styles/main.css";

const heading = "ReadMate";
const subheading = "Track the books you read and manage your reading journey.";
const appIcon = "/images/readmate_app_icon.png";
const appScreenshot = "/images/app-screenshot.png";
const footerImage = "/images/readmate-banners.svg";
const badges = [
  {
    link: "https://apps.apple.com/pl/developer/ivan-trajanovski/id1718049049",
    image: "/images/app-store-badge.svg",
    disabled: false
  },
  {
    link: "https://play.google.com/store/apps/details?id=com.readmate",
    image: "/images/google-play-badge.png",
    disabled: true,
    comingSoon: "Coming to Android soon"
  },
];
const authors = [
  {
    name: "Ivan",
    url: "https://ivantrj.dev",
  },
];
const pageTitle = "ReadMate - Book Tracker";
const favicon = "/images/favicon.ico";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={favicon} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <div class="container">
      <main>
        <div class="text-container">
          <img src={appIcon} class="app-icon" />
          <h1 class="heading">{heading}</h1>
          <h2 class="subheading">{subheading}</h2>

          <div class="features-grid">
            <div class="feature">
              <h3>AI Book Recommendations</h3>
              <p>
                Get personalized book suggestions based on your reading history
                and preferences.
              </p>
            </div>
            <div class="feature">
              <h3>Smart Tags</h3>
              <p>
                Organize your books with custom tags and find them quickly when
                you need them.
              </p>
            </div>
            <div class="feature">
              <h3>Reading Goals</h3>
              <p>
                Set and track your reading goals to stay motivated and build a
                consistent reading habit.
              </p>
            </div>
            <div class="feature">
              <h3>Quick Add</h3>
              <p>
                Easily add books to your library by scanning lr searching
                online.
              </p>
            </div>
          </div>

          <div class="badge-container">
            {
              badges.map((badge) => (
                <div class="badge-wrapper">
                  {!badge.disabled ? (
                    <a href={badge.link} target="_blank">
                      <img src={badge.image} class="badge" />
                    </a>
                  ) : (
                    <div class="badge-disabled">
                      <img src={badge.image} class="badge disabled" />
                      <span class="coming-soon">{badge.comingSoon}</span>
                    </div>
                  )}
                </div>
              ))
            }
          </div>
          <p class="authors">
            Made with &#x2665; by
            {
              authors.map((author, index) => (
                <span>
                  {index > 0
                    ? index === authors.length - 1
                      ? " and "
                      : ", "
                    : ""}
                  <a href={author.url} target="_blank">
                    {author.name}
                  </a>
                </span>
              ))
            }
          </p>
        </div>
        <div>
          <img src={appScreenshot} class="app-screenshot" />
        </div>
      </main>
      <footer>
        <div class="footer-links">
          <a href="/privacy" class="footer-link">Privacy Policy</a> |
          <a href="/tos" class="footer-link">Terms of Use</a>
        </div>
      </footer>
    </div>
  </body>
</html>
